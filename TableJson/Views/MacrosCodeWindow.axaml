<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:TableJson.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:bh="using:TableJson.ViewModels"
		x:Class="TableJson.Views.MacrosCodeWindow"
		x:DataType="vm:MacrosCodeWindowViewModel"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
		xmlns:ae="clr-namespace:AvaloniaEdit;assembly=AvaloniaEdit"
		WindowStartupLocation="CenterScreen"
		WindowState="Maximized"
		>
	<StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
		<DockPanel>
			<TextBox Watermark="Macros Name" Text="{Binding MacrosNameText}" Margin="10,35,10,10"></TextBox>
		</DockPanel>
		<ae:TextEditor MinHeight="300" VerticalAlignment="Stretch" BorderBrush="#008b8b" Document="{Binding SourceCode, Mode=TwoWay}" BorderThickness="2" Margin="10,5,10,0" ShowLineNumbers="True" HorizontalAlignment="Stretch" HorizontalScrollBarVisibility="Visible"
                               VerticalScrollBarVisibility="Visible"></ae:TextEditor>
			<SelectableTextBlock Text="{Binding CompileStatusText}"></SelectableTextBlock>
			<Button Content="Compile" Margin="10,5,10,5" Command="{Binding CompileSourceCodeCommand}"></Button>
	</StackPanel>
</Window>